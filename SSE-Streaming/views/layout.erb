<html>
  <head>
    <title> Push Notification </title>
      <link href='http://fonts.googleapis.com/css?family=Flamenco' rel='stylesheet' type='text/css'>
      
      <% if @css %>
	<% @css.each do |cs| %>
	  <%= "<link href=\"/css/#{cs}.css\" rel=\"stylesheet\" type=\"text/css\">" %>
	<% end %>
      <% end %>
      <link type='text/css' rel="stylesheet" href="http://yui.yahooapis.com/pure/0.4.2/pure-min.css">
      <script src="/js/jquery.js"> </script>
      <script src="/js/jquery-ui.js"> </script>
      <% if @js %>
	<% @js.each do |script| %>
	  <%= "<script src=\"/js/#{script}.js\"></script>" %>
	  <!-- within quotes quotes are being used, so they must be escaped-->
	<% end %>
      <% end %>
      
      <% if @erbjs %>
	<% @erbjs.each do |script| %>
	  <%= "<script src=\"/js/#{script}.js.erb\"></script>" %>
	  <!-- within quotes quotes are being used, so they must be escaped-->
	<% end %>
      <% end %>
  </head>

  <body>
	<!-- implementation specific here -->
	<%= yield %>
  </body>
</html>

