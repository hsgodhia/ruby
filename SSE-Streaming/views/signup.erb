<div>
<form method="post" action="/user/signup/">
<h3>Signup here!</h3>

<% if @error %>
  <% @error.each do |e| %>
  <%= "<li>#{e}</li>" %>
  <% end %>
  <br/>
<% end %>

<hr>
<label> Login</label><br>
<input id="login" name="login" maxlength="20" placeholder="Login username" type="text"/><br><br>
<label>Name</label><br>
<input name="name" maxlength="20" placeholder="Name" type="text"/><br><br>
<label>Password</label><br>
<input name="pwd" maxlength="100" placeholder="Enter a Password ..." type="password"/> <br><br>
<label>Email</label><br>
<input style="text-transform: lowercase; id="email" name="email" maxlength="30" placeholder="Email" type="text"/><br><br>   
<input type="submit" value="Signup" name="submit">
</form>
</div>
