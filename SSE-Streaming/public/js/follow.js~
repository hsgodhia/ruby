window.onload = function() {
  
 $("#follow").click(function(event)
 {
    var username = $("b#user_name").text(); 
    var data = { "user_name" : username };
    $.post('/follow', data, function(result, status) { 
				alert(result);
				alert(status);
				console.log(result); 
				$("#result").html(result); 
			      } , 'text/html');
 });
}